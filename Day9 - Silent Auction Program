#blank dictionary
bids= {}
#establishing loop
no_more_bids = False

#function to parse dictionary and announce winner
def winning_bidder(bidding_record):
  highest_bid = 0
  winner= ""
  for bidder in bidding_record:
    bid_amount= int(bidding_record[bidder])
    if bid_amount > highest_bid:
      highest_bid = bid_amount
      winner = bidder
  print(f"The winner is {winner} with a bid of ${highest_bid}")

#loop check for program. Take names and bids. Checks for more bidders.
while not no_more_bids:
  print(logo)
  print("Welcome to the secret auction program")
  name = input("What is your name?: ")
  price = input("What is your bid?: $")
  bids[name] = price
  should_continue = input("Are there other bidders?: ")
  clear()
  if should_continue != "yes":
    no_more_bids = True
    winning_bidder(bids)

